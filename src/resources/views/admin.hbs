<div class="container">
    <div class = "homenar">
        <h5>/admin</h5>
        
</div>
        <!-- Phần Danh sách bài viết -->
        <div class="article-list">
            <div style="display: flex; justify-content: space-between;">
            <h2 >Personal Blog</h2>
            <a href="/new" style = "color: black; text-decoration: none; font-size: 17px; color: gray;">+ Add</a>
            </div>
            <ul>
                {{#each article}}
                    <li>
                        <a style = "color: black; text-decoration: none;"><span class="article-title">{{title}}</span></a>
                        <div >
                            <a href="/edit/{{id}}" style = "color: black; text-decoration: none;"><span class="article-date" style = 'margin-right:6px;'>Edit</span></a>
                            <a href="/delete/{{id}}" style = "color: black; text-decoration: none;"><span class="article-date">Delete</span></a>
                        </div>
                    </li>
                {{/each}}
                
            </ul>
        </div>